@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="row">
    <div class="col-md-12">

        <section class="text-center text-lg-start" style="font-size:1.5rem; margin: 10rem;">

            <!-- Jumbotron -->
            <div class="container py-4">
                <div class="row g-0 align-items-center">
                    <div class="col-lg-6 mb-5 mb-lg-0">
                        <div class="card cascading-right" style="background: hsla(0, 0%, 100%, 0.55);backdrop-filter: blur(30px);">
                            <div class="card-body p-5 shadow-5 text-center">
                                <h2 class="fw-bold mb-5">@ViewData["Title"]</h2>
                                <form id="account" method="post">
                                    <!-- 2 column grid layout with text inputs for the first and last names -->
                                    <div class="row">
                                        
                                        <div class="form-outline mb-4">
                                            <input asp-for="Input.Email" style="font-size:1.5rem;" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                                        </div>

                                        <div class="form-outline mb-4">
                                            <input asp-for="Input.Password" style="font-size:1.5rem;" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <!-- 2 column grid layout for inline styling -->
                                    <div class="row mb-4">
                                        <div class="col d-flex justify-content-center">
                                            <!-- Checkbox -->
                                            <div class="form-check">
                                                <label asp-for="Input.RememberMe" class="form-label">
                                                    <input class="form-check-input" asp-for="Input.RememberMe" />
                                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                                </label>
                                            </div>
                                        </div>

                                        <div class="col">
                                            <!-- Forget link -->
                                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                                        </div>
                                    </div>
                                    <div>
                                        <!-- Submit button -->
                                        <button id="login-submit" type="submit" style="margin-bottom:2rem; font-size:inherit.5rem" class="w-100 btn btn-lg btn-primary">Login</button>
                                    </div>
                                </form>

                                <div class="col text-center">
                                    <!-- Register link -->
                                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Don't have account'</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-6 mb-5 mb-lg-0">
                        <img src="https://i.pinimg.com/originals/40/84/df/4084df614f617bfb2ee56b3e228cf16e.jpg" class="w-100 rounded-4 shadow-4"
                             alt="" />
                    </div>
                </div>
            </div>
            <!-- Jumbotron -->
        </section>
    </div>
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
