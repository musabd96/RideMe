@model RideMe.Models.Car

@{
    ViewData["Title"] = "Details";
}

<div class="ReviewAndBook">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 pb-5 pe-lg-5">
                <div class="row">
                    <div class="col-lg-5 p-0 ps-lg-4">
                        <div class="row m-0">
                            <div class="col-12 px-4">
                                <div class="d-flex align-items-end mt-4 mb-2">
                                    <p class="h1 m-0">
                                        <span class="pe-2">
                                            @Html.DisplayFor(model => model.Make)
                                        </span>
                                        <span class="pe-1">
                                            @Html.DisplayFor(model => model.Model)
                                        </span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 p-5">
                        <img src="@Html.DisplayFor(model => model.Image)" alt="Image">

                    </div>
                    <div class="row m-0 bg-light">
                        <div class="col-md-4 col-6 ps-30 pe-0 my-4">
                            <p class="text-muted"><i class="ri-group-line" style="color: black"></i></p>
                            <p class="h5">@Html.DisplayFor(model => model.Seat)<span class="ps-1"> Seats</span></p>
                        </div>
                        <div class="col-md-4 col-6  ps-30 my-4">
                            <p class="text-muted"><img src="~/images/carDoor.png" style="height:1.3rem; width:1.3rem;" /></p>
                            <p class="h5 m-0">@Html.DisplayFor(model => model.Doors)<span class="ps-1"> Doors</span></p>
                            <i class="mdi:car-door"></i>
                        </div>
                        <div class="col-md-4 col-6 ps-30 my-4">
                            <p class="text-muted"><img src="~/images/manual-transmission.png" style="height:1.3rem; width:1.3rem;" /></p>
                            <p class="h5 m-0">@Html.DisplayFor(model => model.Shift)</p>
                        </div>
                        <div class="col-md-4 col-6 ps-30 my-4">
                            <p class="text-muted"><img src="~/images/ac.png" style="height:1.3rem; width:1.3rem;" /></p>
                            <p class="h5 m-0">AC</p>
                        </div>
                        <div class="col-md-4 col-6 ps-30 my-4">
                            <p class="text-muted"><img src="~/images/gas-station.png" style="height:1.3rem; width:1.3rem;" /></p>
                            <p class="h5 m-0">Bensin</p>
                        </div>
                        <div class="col-md-4 col-6 ps-30 my-4">
                            <p class="text-muted"><i class="ri-briefcase-3-line" style="color: black"></i></p>
                            <p class="h5">2<span class="ps-1"> suitcases</span></p>
                        </div>
                    </div>
                    <div class="col-12 text-sm-center text-md-start align-self-center my-2">
                        <div class="row">
                            <div class="col">
                                <a asp-action="Index" class="btn btn-outline-primary w-100" style="font-size:1.5rem;">Back to List</a>
                            </div>
                            <div class="col">
                                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-dark w-100" style="font-size:1.5rem;">Edit</a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>