@model Booking

@{
    ViewData["Title"] = "Details";
}

@{
    DateTime today = DateTime.Today;

    bool disableCancel = Model.Rentals.PickupDate.Date == today;

    bool disableEdit = Model.Rentals.ReturnDate.Date < today;
}


<section class="h-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-10 col-xl-8">
                <div class="card" style="border-radius: 10px;">

                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <p class="lead fw-normal mb-0" style="color: #011544; font-size:2.5rem;">Booking</p>
                            <p class="small text-muted mb-0">Booking Voucher : @Model.Id</p>
                        </div>
                        <div class="card shadow-0 border mb-4">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-12 p-5">
                                        <img src="@Html.DisplayFor(model => model.Car.Image)" alt="Image">
                                    </div>
                                    <div class="col-md-3 text-center d-flex justify-content-center align-items-center">
                                        <p class="text-muted mb-0">Vehicle @Model.Car.Make @Model.Car.Model</p>
                                    </div>
                                    <div class="col-md-3 text-center d-flex justify-content-center align-items-center">
                                        <p class="text-muted mb-0 small"> @Model.Car.Shift</p>
                                    </div>
                                    <div class="col-md-3 text-center d-flex justify-content-center align-items-center">
                                        <p class="text-muted mb-0 small">Fuel   @Model.Car.Fuel</p>
                                    </div>
                                    <div class="col-md-3 text-center d-flex justify-content-center align-items-center">
                                        <p class="text-muted mb-0 small">DailyRate $@Model.Car.DailyRate</p>
                                    </div>
                                </div>
                                <hr class="mb-4" style="background-color: #e0e0e0; opacity: 1;">
                                <div class="row d-flex align-items-center">
                                    <div class="col-md-3">
                                        <p class="text-muted mb-0 small">Location @Model.Rentals.PickupLocation</p>
                                    </div>
                                    <div class="col-md-3">
                                        <p class="text-muted mb-0 small">Pickup Date @Model.Rentals.PickupDate.ToShortDateString() @Model.Rentals.PickupTime.ToString("hh\\:mm") </p>
                                    </div>
                                    <div class="col-md-3">
                                        <p class="text-muted mb-0 small">Pickup Date @Model.Rentals.ReturnDate.ToShortDateString() @Model.Rentals.ReturnTime.ToString("hh\\:mm") </p>
                                    </div>
                                    <div class="col-md-3 align-items-center">
                                        <p class="text-muted mb-0 small">RentalPeriod @Model.RentalPeriod Days</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-2 text-sm-center text-md-start align-self-center my-2">
                            <div class="row">
                                @if (disableEdit)
                                {

                                }
                                else
                                {
                                    <div class="col">
                                        <button class="btn btn-outline-dark w-100" data-bs-toggle="modal" data-bs-target="#EditModal">Edit</button>
                                    </div>
                                    @if (disableCancel)
                                    {
                                        <div class="col">
                                            <button class="btn btn-outline-danger w-100" data-bs-toggle="modal" data-bs-target="#cancelModal" disabled>Cancelled</button>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="col">
                                            <button class="btn btn-outline-danger w-100" data-bs-toggle="modal" data-bs-target="#cancelModal">Cancelled</button>
                                        </div>
                                    }
                                }
                                

                                

                            </div>
                        </div>
                    </div>
                    <div class="card-footer border-0 px-4 py-5"
                         style="background-color: #011544; border-bottom-left-radius: 10px; border-bottom-right-radius: 10px;">
                        <h5 class="d-flex align-items-center justify-content-end text-white text-uppercase mb-0">
                            Total
                            paid: <span class="h2 mb-0 ms-2">$ @Model.TotalCost</span>
                        </h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="modal fade" id="cancelModal" tabindex="-1" aria-labelledby="cancelModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="cancelModalLabel">Cancel Booking</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h3>Are you sure you want to delete this Booking Nr: @Model.Id</h3>
            </div>
            <div class="modal-footer">
                <a asp-action="Details" class="btn btn-outline-dark">No</a>
                <form asp-action="Cancel" id="cancelForm">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Cancelled" class="btn btn-outline-danger" />
                </form>
            </div>
        </div>
    </div>
</div>
